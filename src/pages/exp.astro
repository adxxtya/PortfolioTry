.hexagone {
  position: relative;
  width: 100px;
  height: 110px;
  background: #111;
  margin: 2px;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  transition: 3s;
}

.hexagone:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  pointer-events: none;
  background: rgba(255, 255, 255, 0.02);
  z-index: 1000;
}

.body:hover #cursor {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  width: 400px;
  height: 400px;
  background: #0f0;
  animation: animate 4s linear infinite;
  z-index: 1;
}

@keyframes animate {
  0% {
    filter: hue-rotate(0deg) blur(50px);
  }
  100% {
    filter: hue-rotate(360deg) blur(50px);
  }
}
</style>