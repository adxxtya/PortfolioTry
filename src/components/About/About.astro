<style>
  .card {
    border-radius: 10px;
    filter: drop-shadow(0 5px 10px 0 #ffffff);
    width: 300px;
    height: 180px;
    background-color: #ffffff;
    padding: 20px;
    position: relative;
    z-index: 0;
    overflow: hidden;
    transition: 0.6s ease-in;
  }

  .card::before {
    content: "";
    position: absolute;
    z-index: -1;
    top: -15px;
    right: -15px;
    background: #7952b3;
    height: 260px;
    width: 25px;
    border-radius: 32px;
    transform: scale(1);
    transform-origin: 50% 50%;
    transition: transform 0.25s ease-out;
  }

  .card:hover::before {
    transition-delay: 0.2s;

    transform: scale(40);
  }

  .card:hover {
    color: #ffffff;
  }

  .card p {
    padding: 10px 0;
  }

  /* Hex Background CSS Logic */
  .parent-div {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    background-color: #151518;
  }

  .body {
    position: relative;
    background: #151518;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    margin: 80px;
  }

  .container {
    position: relative;
    height: 100%;
    width: 100%;
    overflow: hidden;
    z-index: 2;
  }

  .row {
    display: inline-flex;
    margin-top: -32px;
    margin-left: -50px;
  }
  .row:nth-child(even) {
    margin-left: 1px;
  }
  .hexagone {
    position: relative;
    width: 100px;
    height: 110px;
    background: #151518;
    margin: 2px;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transition: 3s;
  }

  .hexagone:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    pointer-events: none;
    background: #151518;
    z-index: 1000;
  }

  .body:hover #cursor {
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: #0f0;
    animation: animate 4s linear infinite;
    z-index: 1;
  }

  @keyframes animate {
    0% {
      filter: hue-rotate(0deg) blur(50px);
    }
    100% {
      filter: hue-rotate(360deg) blur(50px);
    }
  }
</style>
